<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Bacon.Detail">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowEnterTransition">@android:transition/slide_bottom</item>
        <item name="android:windowReturnTransition">@android:transition/slide_top</item>
        <item name="android:windowExitTransition">@android:transition/slide_top</item>
    </style>

    <style name="Theme.Bacon.List">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">
            @android:transition/explode
        </item>
        <item name="android:windowReenterTransition">
            @android:transition/slide_top
        </item>
    </style>
</resources>