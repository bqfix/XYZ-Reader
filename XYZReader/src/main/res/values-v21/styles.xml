<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Bacon.Detail" parent="Theme.Bacon">
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowEnterTransition">@android:transition/slide_bottom</item>
        <item name="android:windowReturnTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <style name="Theme.Bacon.List" parent="Theme.Bacon">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">
            @android:transition/explode
        </item>
        <item name="android:windowReenterTransition">
            @android:transition/slide_top
        </item>
    </style>
</resources>